{
  "name": "@bbc/pack",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bin": {
    "pack": "bin/pack.js"
  },
  "scripts": {
    "predebug": "rm -rf dist",
    "debug": "node -r @swc-node/register src/index.ts",
    "lint": "eslint ./src/**/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm",
      "require": "./dist/cjs"
    }
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "eslintConfig": {
    "extends": [
      "iplayer-ts",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "dist/**"
    ],
    "rules": {
      "no-console": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/naming-convention": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "all"
  },
  "pack": {
    "entryPoint": "src/index.ts"
  },
  "dependencies": {
    "@fastify/deepmerge": "^1.3.0",
    "@rollup/pluginutils": "^5.0.2",
    "@swc/core": "^1.3.27",
    "rollup": "^3.10.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "eslint": "^8.32.0",
    "eslint-config-iplayer-ts": "^4.1.0",
    "eslint-config-prettier": "^8.6.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
