{
  "compilerOptions": {
    "baseUrl": ".",
    "noErrorTruncation": true,
    "target": "es2020",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "lib": ["ESNext"],
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "paths": {
      "~/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
